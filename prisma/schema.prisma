generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admins {
  id           Int     @id @default(autoincrement())
  first_name   String
  last_name    String
  email        String  @unique
  phone_number String
  password     String
  active       Boolean @default(true)
}

model users {
  id            Int       @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String    @unique
  phone_number  String
  password      String
  source        String?
  active        Boolean   @default(true)
  last_event_id Int?
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt

  events           users_events[]     @relation("UserEvents")
  gift_suggestions gift_suggestions[]
}

model events {
  id                  Int       @id @default(autoincrement())
  title               String
  subtitle            String
  slug                String    @unique
  date                DateTime?
  location            String?
  description         String?   @db.VarChar(1000)
  title_description   String?
  color               String    @default("#432070")
  active              Boolean   @default(true)
  event_categories_id Int
  created_at          DateTime  @default(now())
  updated_at          DateTime? @updatedAt

  users            users_events[]     @relation("UserEvents")
  event_details    event_details[]
  gifts            events_gifts[]     @relation("EventsGifts")
  gift_suggestions gift_suggestions[]
}

model events_gifts {
  event_id   Int
  gift_id    Int
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt
  deleted_at  DateTime?

  event events @relation("EventsGifts", fields: [event_id], references: [id])
  gift  gifts  @relation("EventsGifts", fields: [gift_id], references: [id])

  @@id([event_id, gift_id])
  @@index([gift_id])
  @@index([event_id])
}

model users_events {
  user_id    Int
  event_id   Int
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  user  users  @relation("UserEvents", fields: [user_id], references: [id])
  event events @relation("UserEvents", fields: [event_id], references: [id])

  @@id([user_id, event_id])
  @@index([user_id])
  @@index([event_id])
}

model event_types {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  active      Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt
}

model event_categories {
  id            Int       @id @default(autoincrement())
  name          String
  description   String
  event_type_id Int
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt
}

model event_details {
  id                    Int       @id @default(autoincrement())
  event_id              Int
  event_date            DateTime
  start_time            DateTime
  end_time              DateTime
  event_type            String
  event_location        String?
  postal_code           String?
  full_address          String?
  transmission          String?
  transmission_link     String?
  transmission_password String?
  latitude              Float?
  longitude             Float?
  created_at            DateTime  @default(now())
  updated_at            DateTime? @updatedAt

  event events @relation(fields: [event_id], references: [id])

  @@index([event_id])
}

model gifts {
  id                  Int       @id @default(autoincrement())
  name                String
  description         String
  price               Float
  event_categories_id Int
  created_at          DateTime  @default(now())
  updated_at          DateTime? @updatedAt
  deleted_at           DateTime?

  events events_gifts[] @relation("EventsGifts")
}

model gift_suggestions {
  id          Int       @id @default(autoincrement())
  user_id     Int
  event_id    Int
  title       String
  description String?    @db.VarChar(500)
  created_at  DateTime  @default(now())
  updated_at  DateTime? @updatedAt

  user  users  @relation(fields: [user_id], references: [id])
  event events @relation(fields: [event_id], references: [id])

  @@index([user_id])
  @@index([event_id])
}
